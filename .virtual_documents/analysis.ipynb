def splits(strs,chars = ' '):
    lst = []
    temp = ""
    for i in strs:
        if i == chars:
            if temp != "":
                lst.append(temp)
            temp = ""
        else:
            temp+=i
    if temp != "" : lst.append(temp)
    return lst
strs = "i am a python coder    "
